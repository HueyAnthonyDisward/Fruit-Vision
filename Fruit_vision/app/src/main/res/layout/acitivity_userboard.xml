<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/imageAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_user_24dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button: Thay đổi thông tin -->
    <Button
        android:id="@+id/btnChangeInfo"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="THAY ĐỔI THÔNG TIN"
        android:background="@drawable/rounded_button"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/imageAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Button: Lịch sử tra cứu -->
    <Button
        android:id="@+id/btnHistory"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="LỊCH SỬ TRA CỨU"
        android:background="@drawable/rounded_button"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btnChangeInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Button: Đăng xuất -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="ĐĂNG XUẤT"
        android:background="@drawable/rounded_button"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btnHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#E0E0E0"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/navBook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_book"
            android:background="@android:color/transparent"
            android:contentDescription="Book" />

        <ImageButton
            android:id="@+id/navCamera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_camera"
            android:background="@android:color/transparent"
            android:contentDescription="Camera" />

        <ImageButton
            android:id="@+id/navProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_profile"
            android:background="@android:color/transparent"
            android:contentDescription="Profile" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>